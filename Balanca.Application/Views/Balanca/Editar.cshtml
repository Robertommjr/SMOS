<section class="content-header">
    <h4>
        Balanças
        <small>Versão 1.0</small>
    </h4>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Balanças</a></li>
        <li class="active">Edição</li>
    </ol>
</section>

<section class="content">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Editar Baia</h3>
            </div>
            <form class="form" id="frmEdicaoBalanca">
                <div class="box-body">
                    <div class="form-group">
                        <label>Baias</label>
                        <select class="form-control" id="slcEditarBalancas">
                            <option>Selecione uma baia</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputNomeBaia">Nome</label>
                        <input type="text" maxlength="14"  class="form-control" id="inputNomeBaia" placeholder="Nome" required readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="inputDescricaoBaia">Descrição</label>
                        <input type="text" maxlength="14" class="form-control" id="inputDescricaoBaia" placeholder="Descrição" required readonly="readonly">
                    </div>
                    <div class="form-group">
                        <label for="inputPesoBaia">Último Peso</label>
                        <input type="number" maxlength="14" class="form-control" id="inputPesoBaia" placeholder="Peso" required readonly="readonly">
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Atualizar</button>
                </div>
            </form>
        </div>
    </div>
</section>
@Scripts.Render("~/Scripts/Aplicacao/Balanca/Editar/EditarCtrl.js")